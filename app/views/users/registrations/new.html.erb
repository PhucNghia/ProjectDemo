<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-3 centered">
      <h1><%= t "users.create_user" %></h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label t "users.name" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name",
            placeholder: (t "users.name") %>
        </div>

        <div class="field">
          <%= f.label :Avatar %>
          <%= f.file_field :avatar, accept: "image/jpeg, image/gif, image/png, image/jpg" %>
        </div>

        <div class="field">
          <%= f.label t "users.email" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
            placeholder: (t "users.email") %>
        </div>

        <div class="field">
          <%= f.label t "users.password" %>
          <%= f.password_field :password, autocomplete: "off",
            placeholder: t("sessions.password") %>
        </div>

        <div class="field">
          <%= f.label t "users.password_confirm" %>
          <%= f.password_field :password_confirmation, autocomplete: "off",
            placeholder: t("users.password_confirm") %>
        </div>

        <div class="field">
          <%= f.label t "users.phone" %>
          <%= f.text_field :phone, autofocus: true, autocomplete: "phone",
            placeholder: t("users.phone") %>
        </div>

        <div class="field">
          <%= f.label t "users.address" %>
          <%= f.text_field :address, autofocus: true, autocomplete: "address",
            placeholder: t("users.address") %>
        </div>

        <div class="actions">
        <%= f.submit t("users.submit"), class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
