<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-3 centered">
      <h1> <%= t "users.edit2" %></h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
        html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label t "users.name" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field">
          <%= f.label :Avatar %>
          <%= f.file_field :avatar, accept: "image/jpeg, image/gif, image/png, image/jpg" %>
        </div>

        <div class="field">
          <%= f.label t "users.email" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label t "users.password" %> <i><%= t "users.leave_blank" %></i> <br/>
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label t "users.password_confirm" %>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label t "users.current_password" %>
          <%= f.password_field :current_password, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :phone %>
          <%= f.text_field :phone, autofocus: true, autocomplete: "phone" %>
        </div>

        <div class="field">
          <%= f.label :address %>
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>

        <div class="actions">
          <%= f.submit t("users.update"), class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= link_to t("users.back"), :back %>
    </div>
  </div>
</div>
