<p id="notice"><%= notice %></p>

<%= link_to "New Post", new_post_path, class: "btn btn-primary ",
  style: "float: right; magin-right: 20px;" %>
<table class="table table-hover">
  <% @posts.each do |post| %>
    <tr>
      <td>
        <%= link_to image_tag(post.user.avatar), "#", class: "avatar" %>
        <b><%=link_to post.user.name, "#", style: "color: red;" %></b>
          <%= time_ago_in_words(post.created_at) %><%= t ".ago" %>
        <h3><%= link_to post.title.html_safe, post %></h3>
      </td>
    </tr>
  <% end %>
</table>
 <%= paginate @posts, theme: "twitter-bootstrap-3" %>
