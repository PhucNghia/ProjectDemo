<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<%= link_to "New Post", new_post_path, class: "btn btn-primary ",
  style: "float: right; magin-right: 20px;" %>
<table class="table table-hover">
  <% @posts.each do |post| %>
    <tr>
      <td>
        <%= link_to image_tag(post.user.avatar), "#", class: "avatar" %>
        <b><%=link_to post.user.name, user_path(post.user.id) %></b>
        <h3><%= link_to post.title.html_safe, post %></h3>
      </td>
    </tr>
  <% end %>
</table>

<br>
